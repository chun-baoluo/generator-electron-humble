{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./dev",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [ "node", "core-js"]
  },
  "exclude": [
    "node_modules",
    "app/node_modules"
  ]
}
